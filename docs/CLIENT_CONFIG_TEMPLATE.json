{
  "_comment": "LUMINA License Client Configuration Template - License Unified Management & Identity Network Authorization - Copy this file and fill in actual values",
  "_version": "1.0.0",
  "server": {
    "url": "https://license.example.com",
    "timeout": 10,
    "retry_attempts": 3,
    "retry_delay": 1000
  },
  "license": {
    "key": "LS-2026-XXXXXXXXXXXXXXX",
    "enable_machine_binding": true,
    "verify_on_start": true,
    "verify_interval_hours": 24
  },
  "offline": {
    "enable": false,
    "grace_period_days": 7,
    "cache_file": ".license_cache.json"
  },
  "security": {
    "encrypt_key": true,
    "encryption_method": "AES-256"
  },
  "logging": {
    "enable": true,
    "log_file": "license_client.log",
    "log_level": "INFO"
  },
  "behavior": {
    "action_on_invalid": "exit",
    "action_on_expired": "exit",
    "action_on_network_error": "retry",
    "show_error_message": true,
    "error_message": "License verification failed, please contact technical support"
  },
  "ui": {
    "show_verification_status": true,
    "show_license_info": true,
    "support_email": "support@example.com",
    "support_url": "https://example.com/support"
  },
  "_example_responses": {
    "success": {
      "valid": true,
      "message": "License verified successfully",
      "license": {
        "key": "LS-2026-CHSVYS8PAB9LT53L",
        "product": "MyApp",
        "customer": "John Smith",
        "max_activations": 2,
        "remaining_activations": 1
      }
    },
    "failed": {
      "valid": false,
      "message": "License has expired"
    }
  }
}
